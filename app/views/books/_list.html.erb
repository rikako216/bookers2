<div class="col-lg-3">
  
  <h2>User info</h2>
  <table class="table">
    <%= image_tag user.get_profile_image(100,100) %>
    <tbody>
      <tr>
      <th>name</th>
      <th><%= user.name %></th>
      </tr>
      <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
      </tr>
    <tbody>
  </table>
  
  <div class='row'>
  <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  </div>
  
  
  <h2>New Book</h2>
  <% if book.errors.any? %>
  <%= book.errors.count %>errors prohibited this book from being saved
  <ul>
  <% book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
  </ul>
  <% end %>

  <%= form_with model: book do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <input class="form-control book_title" type="text" name="book[title]" id="book_title" />
  </div>
	
	<div class="form-group">
    <label for="book_body">Opinion</label>
    <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
  </div>
	
	<div class="form-group">
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" />
  </div>
  
  <% end %>
</div>
