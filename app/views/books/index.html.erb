<h1>Books#index</h1>

 <main>
    <div class="container">
      <div class="row">
        <div class="col-lg-3">
          <h2>User info</h2>
        </div>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th></th>
              </tr>
            <tbody>
          </table>
      </div>  
    </div>  
    
    <div class="col-md-8 offset-md-1">
      <h2>Book</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id)%></td>
          <td><%= link_to "Edit", edit_book_path(book.id)%></td>
          <td><%= link_to "Destroy", book_path(book.id),method: :delete, "data-confirm" => "Are you sure?"%></td>
        </tr>
       <% end %>
       </tbody>
      </table>
    </div>
  </main>