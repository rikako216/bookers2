<div class="container">
    <div class="row">
    <%= render 'list', book: @book,user: @user%>
    <div class="col-md-8 offset-md-1">
      <h2>Book</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th colspan="3"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
      <% @books.each do |book| %>
        <tr>
          <th colspan="3"></th>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
       <% end %>
       </tbody>
      </table>
    </div>
    </div>
    </div>
